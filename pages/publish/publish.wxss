.publish{
  background: #fff;
  margin: 20rpx 0;
  padding: 0 20px;
}
.publish-title input{
  font-size: 28rpx;
  padding: 30rpx 20rpx;
  border-bottom: 1px dashed #ccc;
}
.publish-detail textarea{
  padding: 30rpx 0;
  font-size: 26rpx;
}
.publish-image{
  display: flex;
  padding-bottom: 30rpx;
}
.publish-image-item{
  width: 200rpx;
  height: 200rpx;
  margin-right: 30rpx;
}
.publish-image-item image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 5rpx;
}
.publish-image-upload{
  width: 200rpx;
  height: 200rpx;
  display:flex;
  flex-direction: column;
  align-items:center;/*垂直居中*/
  justify-content: center;/*水平居中*/
  border: 1px dashed #ccc;
  box-sizing: border-box;
  color: #666;
  border-radius: 5rpx;
}